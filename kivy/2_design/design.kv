#:kivy 2.3.1

<MyGridLayout>:
    name: name
    color: color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()