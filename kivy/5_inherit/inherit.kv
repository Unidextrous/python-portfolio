# Customize all Button widgets globally (inheritance)
<Button>:
    font_size: 32
    background_normal: ""
    background_color: (0, 0, 1, 1)

<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"

        TextInput:
            multiline: False
        
        Label:
            text: "Favorite color"
        
        TextInput:
            multiline: False
        
        Button:
            text: "Submit"  # Inherits blue background and font size from <Button>
        
        Button:
            text: "Clear"
            background_color: (1, 0, 0, 1)  # Override inherited blue with red for this button