#:kivy 2.3.1

<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Button:
            text: "Hello, world!"
            pos_hint: {"center_x": 0.5}
            size_hint: (0.5, 0.5)
        
        Button:
            text: "Hi, world!"
            pos_hint: {"center_x": 0.5}
            size_hint: (0.5, 0.5)
        
        Button:
            text: "'Sup, world?"
            size_hint: (None, None)
            pos_hint: {"center_x": 0.5}
            width: 100
            height: 50