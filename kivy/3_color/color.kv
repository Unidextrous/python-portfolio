#:import utils kivy.utils

# Define the layout rules for MyGridLayout
<MyGridLayout>:
    name: name
    color: color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            background_normal: ""

            # Background color can be set using either of the following:

            # Method 1: RGBA tuple (red, green, blue, alpha)
            background_color: (0, 0, 1, 1)

            # Method 2: Using Kivy's utility function to convert hex to RGBA
            background_color: utils.get_color_from_hex("#0000ff")

            on_press: root.press()