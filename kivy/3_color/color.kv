#:kivy 2.3.1
#:import utils kivy.utils

<MyGridLayout>:
    name: name
    color: color

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            background_normal: ""
            background_color: (0, 0, 1, 1)
            background_color: utils.get_color_from_hex("#0000ff")

            on_press: root.press()