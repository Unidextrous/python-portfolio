<Button>:
    font_size: 32
    background_normal: ""
    background_color: (0, 0, 1, 1)

<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
            font_size: 45

            # Add a custom background color using canvas
            background_color: (125/255, 125/255, 125/255, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
                    
            color: (1, 1, 1, 1)     # White text
            bold: True              # Bold text
            italic: True            # Italic text
            outline_color: (0, 0, 0)
            outline_width: 2

        TextInput:
            multiline: False
        
        Button:
            text: "Submit"